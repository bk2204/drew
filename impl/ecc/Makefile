PLUGINS_ECC-$(CFG_ECCPRIME)		+= prime/prime

ECC_DIR			:= impl/ecc
ECC_PLUGINS		:= $(patsubst %,$(ECC_DIR)/%,$(PLUGINS_ECC-m))
ECC_MODULES		:= $(patsubst %,$(ECC_DIR)/%.o,$(PLUGINS_ECC-y))
PLUGINS			+= $(ECC_PLUGINS)
MODULES			+= $(ECC_MODULES)

$(ECC_PLUGINS):			CPPFLAGS += -I$(ECC_DIR) -DDREW_AS_PLUGIN
$(ECC_MODULES):			CPPFLAGS += -I$(ECC_DIR) -DDREW_AS_MODULE
$(ECC_PLUGINS:=.d):		CPPFLAGS += -I$(ECC_DIR) -DDREW_AS_PLUGIN
$(ECC_MODULES:.o=.d):	CPPFLAGS += -I$(ECC_DIR) -DDREW_AS_MODULE
